{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TZT指纹浏览器",
  "version": "0.1.0",
  "identifier": "com.tzt.browser",
  "build": {
    "beforeDevCommand": "npm run dev --prefix ./ui",
    "beforeBuildCommand": "npm run build --prefix ./ui",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../ui/dist"
  },
  "app": {
    "security": { "csp": null },
    "windows": [
      {
        "title": "TZT指纹浏览器",
        "width": 1200,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.icns",
      "icons/icon.ico",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  },
  "plugins": {}
}